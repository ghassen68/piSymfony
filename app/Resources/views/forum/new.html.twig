{% extends 'base.html.twig' %}

{% block body %}

    <section class="bootstrap-switch-focused">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="block text-center">
                        <a class="logo" href="#">
                        </a>

                        <h2 class="text-center">Add a Post</h2>
                        {{ form_start(form) }}
                        <form class="text-left clearfix">



                            <div class="form-group"  >

                                {{ form_widget (form.title)  }}
                            </div>
                            <div class="form-group">
                                {{ form_widget (form.categorie)  }}
                            </div>
                            <div class="form-group">
                                {{ form_widget (form.description)  }}
                            </div>
                            <center>
                            <div class="form-group" >
                                {{ form_widget (form.image)  }}
                            </div>
                            </center>


                            <input type="submit" value="Create"  class="btn btn-main text-center" />
                            {{ form_end(form) }}
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>


        <li>
            <a href="{{ path('forum_index') }}">Back to the list</a>
        </li>

{% endblock %}
