{% extends 'base.html.twig' %}

{% block body %}
    <section class="signin-page account">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="block text-center">
                        <a class="logo" href="#">
                            <img src="{{ asset('T/images/logofashionblog.png') }}" alt="" style="width: 200px">
                        </a>

                        <h2 class="text-center">Add a Post</h2>
                        {{ form_start(form) }}
                        <form class="text-left clearfix">



                            <div class="form-group">

                                {{ form_row (form.title)  }}
                            </div>
                            <div class="form-group">
                                {{ form_row (form.categorie)  }}
                            </div>
                            <div class="form-group">
                                {{ form_row (form.description)  }}
                            </div>
                            <div class="form-group">
                                {{ form_row (form.image)  }}
                            </div>


                            <input type="submit" value="Create" />
                            {{ form_end(form) }}
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>


        <li>
            <a href="{{ path('forum_index') }}">Back to the list</a>
        </li>

{% endblock %}
