{% extends 'base.html.twig' %}

{% block body %}
    <h1>Forums list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forum in forums %}
            <tr>
                <td><a href="{{ path('forum_show', { 'id': forum.id }) }}">{{ forum.id }}</a></td>
                <td>{{ forum.title }}</td>
                <td>{{ forum.image }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('forum_show', { 'id': forum.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('forum_edit', { 'id': forum.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('forum_new') }}">Create a new forum</a>
        </li>
    </ul>




<div class="post">
    <div class="post-media post-thumb">
        <a href="blog-single.html">
          <center>  <img  src="{{ asset('uploads/images/') ~ forum.image }}" style="width: 400px"></center>
        </a>
    </div>
    <h2 class="post-title"><a href="blog-single.html">{{ forum.title }}</a></h2>
    <div class="post-meta">
        <ul>
            <li>
                <i class="tf-ion-ios-calendar"></i> {{ forum.date|date('d-m-y') }}
            </li>
            <li>
                <i class="tf-ion-android-person"></i> POSTED BY ADMIN
            </li>
            <li>
                <a href="#"><i class="tf-ion-ios-pricetags"></i> {{ forum.categorie.libelle }}</a>
            </li>
            <li>
                <a href="#"><i class="tf-ion-chatbubbles"></i> 4 COMMENTS</a>
            </li>
        </ul>
    </div>
    <div class="post-content">
