{% extends 'base.html.twig' %}

{% block body %}

    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">
                        <h1 class="page-name">Forum</h1>
                        <ol class="breadcrumb">
                            <li><a href="{{ path('homepage') }}">Home</a></li>
                            <li class="active">blog</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>







    <section class="page-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="post post-single">
                        <div class="post-thumb">
                            <img class="img-responsive"   src="{{ asset('uploads/images/') ~ forum.image }}" >
                        </div>
                            <td>{{ forum.title }}</td>

                        <div class="post-meta">
                            <ul>
                                <li>
                                    <i class="tf-ion-ios-calendar"></i> {{forum.date|date('Y-m-d')}}
                                </li>
                                <li>
                                    <i class="tf-ion-android-person"></i> Posted By {{forum.user}}
                                </li>
                                <li>
                                    <a href="#"><i class="tf-ion-ios-pricetags"></i></a>
                                    {{ forum.categorie.libelle }}
                                </li>
                                <li>
                                    <a href="#"><i class="tf-ion-chatbubbles"></i> {{ commentaireForums|length }} COMMENTS&nbsp;&nbsp;&nbsp;&nbsp;</a>
                                </li>
                            </ul>
                        </div>
                        <div class="post-content post-excerpt">

                            <blockquote class="quote-post">
                                <p>
                                    {{ forum.description }}
                                </p>
                            </blockquote>

                            {% include 'commentaireforum/index.html.twig' %}

                        <div class="post-comments-form" id="add" style="visibility: hidden;">
                                <div class="row">
                                    <div class="col-md-6 form-group">
                                        <form method="post" action="{{ path('commentaireforum_new',{'id':forum.id}) }}"  id="form" role="form" >
                                        {{ render(controller('ForumBundle:CommentaireForum:new',{'id':forum.id})) }}
                                        </form>
                                    </div>
                                </div>

                        </div>


                    </div>

                </div>
            </div>
        </div>
        </div>


