{% extends 'base.html.twig' %}

{% block body %}
    <h1>Forum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forum.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ forum.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ forum.image }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('forum_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('forum_edit', { 'id': forum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
