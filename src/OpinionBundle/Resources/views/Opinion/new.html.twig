{% extends 'base.html.twig' %}
{% block title %}Rating{% endblock %}
{% block body %}


    <style>

        #opinion_contenu{
          width: 1150px ;

        }
    </style>


        <body id="top">

        <div class="feedback main-grid-border">
            <div class="container">
    <br>
               <center> <h2 class="w3-head">Evaluation</h2></center>
                <div class="feed-back">


                    <div class="feed-back-form">


                        <div >
                            <h3 >Donner nous votre avis et n'oublier pas de nous noter ! </h3>

                            {{ form_start(form) }}
                            <div class="post-comments-form">
                                <h3 class="post-sub-heading">Leave You opinion</h3>

                                    <div class="row">
                                        <!-- Comment -->
                                        <div class="form-group col-md-12">
                                            {{ form_label(form.contenu ) }}
                                            {{ form_widget(form.contenu) }}
                                            {{ form_errors(form.contenu) }}
                                        </div>
                                    </div>
                                <input class="btn btn-main btn-large btn-round-full " type="submit" value="Confirmer" id="send" >
                                <div class="col-md-6">
                                    <label id ="err"  style="color: black;size: 10px"   >N'oubliez pas de nous not√© </label>
                                    {% include"@Opinion/Opinion/rating.html.twig" %}
                                </div>

                            </div>



                            <input id ="rating" type="number" name="note">
                            <style>
                                #rating{
                                    display: none;

                                }
                            </style>

                            <script>
                                $('#send').click(function(){
                                    if($('#rating').val()=="")
                                        $('#err').show();
                                });
                                $('.star').click(function (){
                                    $('#err').hide();
                                });
                            </script>
                            {{ form_end(form) }}
                        </div>

                    <br><br><br><br>
                        <div>
                            <a href="{{ path('opinion_aff') }}">
                                <h2 style="color:cornflowerblue;text-decoration: underline" >   Ce que pensent les autres?</h2>
                            </a></div>

                    </div>
                    <div >
                        {{ render(controller('OpinionBundle:Feedback:NbreNote')) }}
                    </div>


                </div>
            </div>
        </div>


                            </body>


{% endblock %}
